@using ClassroomHub.Web.ViewModels
@model ClassViewModel

<form method="post" asp-controller="Class" asp-action="Create">
	<button type="button" class=" btn btn-dark" data-toggle="modal" data-target="#createClass">
		Adicionar Turma
	</button>
	<div class="modal fade" id="createClass" tabindex="-1" role="dialog" aria-hidden="true" >
		<div class="modal-dialog modal-dialog-centered" role="document">
			<div class="modal-content bg-info">
				<div class="modal-header bg-dark">
					<h5 class="modal-title text-white">Cadastrar Turma</h5>
					<button type="button" class="close text-white" data-dismis="modal" aria-label=" Fechar">
						<span aria-hidden="true"></span>
					</button>
				</div>
				<div class="modal-body">
					<div class="" asp-validation-summary="All" class="text-danger">

					</div>
					<div class="row mt-3">
						<div class="col-12">
							@Html.DisplayNameFor(x => x.CourseId)
							@Html.DropDownListFor(x => x.CourseId,(SelectList)ViewBag.Courses,"Selecione o Curso", new{@class="form-control mt-2"})
							<span asp-validation-for="CourseId" class="text-danger"></span>
						</div>
					</div>
					<div class="row mt-3">
						<div class="col-12">
							@Html.DisplayNameFor(x => x.Name)
							@Html.TextBoxFor(x => x.Name, new{ Placeholder="Nome da Turma", Attribute="width:100#", @class="form-control mt-2"})
							<span asp-validation-for="Name" class="text-danger"></span>
						</div>
					</div>
					<div class="row mt-3">
						<div class="col-6">
							@Html.DisplayNameFor(x =>x.Start)
							@Html.TextBoxFor(x => x.Start, new{Placeholder = "Inicio" , Type="Date", @class="form-control mt-2"})
							<span asp-validation-for="Start" class="text-danger"></span>
						</div>
						<div class="col-6">
							@Html.DisplayNameFor(x =>x.End)
							@Html.TextBoxFor(x => x.End, new{Placeholder = "Conclusao" , Type="Date", @class="form-control mt-2"})
							<span asp-validation-for="End" class="text-danger"></span>
						</div>
					</div>

				</div>
				<div class="modal-footer bg-dark">
					<button type="button" class="btn btn-outline-danger" data-dismiss="modal">Ferchar</button>
					<button type="submit" class="btn  btn-outline-primary">Salvar</button>

				</div>
			</div>
		</div> 
	</div>

</form>
