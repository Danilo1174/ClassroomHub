@using ClassroomHub.Web.ViewModels;
@model CourseViewModel;

<div class="row">
    <div class="col-12">
        <h1>Editar curso.</h1>
    </div>
</div>

<form method="post" asp-controller="Course" asp-action="Edit">
    <div class="row">
        <div class="col-12">
            @Html.DisplayNameFor(x => x.Name)
            @Html.TextBoxFor(x => x.Name, new {Placeholder="Informe o nome do curso", @class="mb-2 form-control"})
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="row mt-3">
        <div col="col-12">
            @Html.DisplayNameFor(x => x.Description)

            @Html.TextBoxFor(x => x.Description, new {Placeholder="Informe aqui a ementa do curso", @class="mb-2 form-control"})
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>

    <button class="btn btn-outline-secondary text-white" asp-action="Index">Cancelar</button>
    <button class="btn btn-outline-primary text-white" type="submit">Enviar</button>

</form>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}