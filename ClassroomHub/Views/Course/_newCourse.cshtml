@using ClassroomHub.Web.ViewModels;
@model CourseViewModel;

<form method="post" asp-controller="Course" asp-action="Create">
    <button type="button" class="btn btn-dark" data-toggle="modal" data-target="#createCourse">
        Criar Novo
    </button>
    <div class="modal fade" id="createCourse" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content bg-info">
                <div class="modal-header bg-dark text-black-50">
                    <h5 class="modal-title text-white" id="createCourse">Cadastrar Curso</h5>
                    <button type="button" class="close text-white" data-dismiss="modal" aria-label="Close">
                        <span aria-hiden="True">&times;</span>
                    </button>
                </div>
                <div class="modal-body bg-info">
                    <div class="row mt-3">
                        <div class="col-12">
                            <label asp-for="Name" class="mb-0"></label>
                            @Html.TextBoxFor(x => x.Name, new{Placeholder = "Insira o nome do curso", Attribute ="width:100%", @class="form-control mt-2"})
                            @Html.ValidationMessageFor(x => x.Name)
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-12">
                            <label asp-for="Description" class="mb-0"></label>
                            @Html.TextAreaFor(x => x.Description, new {Placeholder = "Informe aqui a ementa do curso", Attribute="width:100%", @class="form-control mt-2"})
                        </div>
                    </div>
                </div>
                <div class="modal-footer bg-dark ">
                    <button type="button" class="btn btn-outline-danger" data-dismiss="modal">Fechar</button>
                    <button type="submit" class="btn  btn-outline-primary">Salvar</button>
                </div>
            </div>
        </div>
    </div>
</form>